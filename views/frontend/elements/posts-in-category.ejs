
<div>
    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">News</div>
</div>
<%
    newArticles.forEach(article => {
        %>
        <div class="row pb-4">
            <div class="col-md-5">
                <div class="fh5co_hover_news_img">
                    <div class="fh5co_news_img"><img src="<%= folderUploadArticles + article.thumb %>" alt="<%= article.name %>"/></div>
                </div>
            </div>
            <div class="col-md-7 animate-box">
                <a href="single.html" class="fh5co_magna py-2"> <%= article.name %> </a> 
                <a href="single.html" class="fh5co_mini_time py-3"> <%= formatDateHelper(article.created.time) %> </a>
                <div class="fh5co_consectetur"> <%= formatSummaryHelper(article.content) %></div>
            </div>
        </div>
        <%
    })
%>