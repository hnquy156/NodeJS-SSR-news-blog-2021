<%
    collection = 'items';
    linkPrefix = `/${systemConfigs.prefixAdmin}/${collection}`;
    const statusSelectbox = [
            {value: 'default', name: '- Select status -'},
            {value: 'active', name: 'Active'},
            {value: 'inactive', name: 'Inactive'},
        ];
%>
<% include ./../../helpers/notify-validate %>
<% include ./../../helpers/selectbox %>

<%- showErrors(errors) %>

<div class="card card-info card-outline">
    <div class="card-body">
        <form action="<%= linkPrefix %>/form" method="post" class="mb-0" id="admin-form">

            <div class="form-group row">
                <label for="form[name]" class="col-sm-2 col-form-label text-sm-right required">Name</label>
                <div class="col-xs-12 col-sm-8">
                    <input type="text" id="form[name]" name="name" value="<%= item.name %>" class="form-control form-control-sm">
                </div>
            </div>
            
            <div class="form-group row">
                <label for="form[status]" class="col-sm-2 col-form-label text-sm-right required">Status</label>
                <div class="col-xs-12 col-sm-8">
                    <%- selectboxHelper('status', statusSelectbox, item.status) %>
                </div>
            </div>

            <div class="form-group row">
                <label for="form[name]" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
                <div class="col-xs-12 col-sm-8">
                    <input type="number" min="1" id="form[name]" name="ordering" value="<%= item.ordering %>" class="form-control form-control-sm">
                </div>
            </div>
            <div class="form-group row">
                <label for="form[name]" class="col-sm-2 col-form-label text-sm-right required">Content</label>
                <div class="col-xs-12 col-sm-8">
                    <input type="text" id="form[name]" name="content" value="<%= item.content %>" class="form-control form-control-sm">
                </div>
            </div>

        </form>
    </div>
    <div class="card-footer">
        <div class="col-12 col-sm-8 offset-sm-2">
            <button id="admin-form-submit" class="btn btn-sm btn-success mr-1"> Save</button>
            <a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
        </div>
    </div>

</div>